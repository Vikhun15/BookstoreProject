<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClientWeb.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="/images/books.png">
</head>

<body>
    <div id="bg-image">

        <nav class="row">
            <button id="homeBtn" onclick="location.href='/Index'" class="col button">Home</button>
            <button id="blogBtn" onclick="location.href='/Blog'" class="col button">Blog</button>
            <button id="shopBtn" onclick="location.href='/Webshop'" class="col button">Webshop</button>
            <button id="aboutBtn" onclick="location.href='/About'" class="col button">About us</button>
        </nav>
        <div id="themeSwitch">
            <img id="themeImg" class="day" src="~/images/icons/sun.png" />

        </div>
        <main>
            @RenderBody()
        </main>
        <footer>
            <script asp-append-version="true" src="~/js/site.js"></script>
            <script type="text/javascript">
                if (getCookie("theme") != "") {
                    SwitchTheme(getCookie("theme"))
                }
            </script>
        </footer>
    </div>
</body>

</html>